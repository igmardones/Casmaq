---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Footer from "../components/Footer.astro";
import Products from "../components/Products.astro";

// Datos de los productos
import { PRODUCTS } from "../data/products.ts";

// Filtrar productos por categoría
const pallets = PRODUCTS.filter((product) => product.category === "Pallet");
const bolsas = PRODUCTS.filter((product) => product.category === "Bolsa");
---

<Layout title="Casmaq">
  <main>
    <Header />

    <!-- Sección para los Pallets -->
    <SectionContainer class="pt-10 font-sans">
      <div class="flex flex-col md:flex-row mx-4">
        <div class="md:w-3/3">
          <h1 class="font-bold text-4xl">PRODUCTOS</h1>
          <h2 class="font-bold text-3xl mt-6">Pallets</h2>
          <p class="mt-8 text-pretty text-xl">
            Los pallets son una herramienta fundamental en la logística de
            cualquier empresa. En Casmaq, contamos con una amplia variedad de
            pallets de madera para satisfacer las necesidades de nuestros
            clientes.
          </p>
        </div>
      </div>
    </SectionContainer>

    <SectionContainer class="pt-10 font-sans">
      <Products products={pallets} />
    </SectionContainer>

    <!-- Sección para las Bolsas -->
    <SectionContainer class="pt-10 font-sans">
      <div class="flex flex-col md:flex-row mx-4">
        <div class="md:w-3/3">
          <h2 class="font-bold text-4xl mt-6">Bolsas</h2>
          <p class="mt-8 text-pretty text-xl">
            Las bolsas son ideales para la exportación de frutas y verduras.
            Disponibles en 2,5 kg y 5 kg, estas bolsas transparentes de
            poliolefina prolongan la vida útil de los productos y cuentan con
            certificaciones de calidad NSF e IQC.
          </p>
        </div>
      </div>
    </SectionContainer>

    <SectionContainer class="pt-10 font-sans">
      <Products products={bolsas} />
    </SectionContainer>

    <Footer />
  </main>
</Layout>
