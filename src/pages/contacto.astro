---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Casmaq">
  <main>
    <Header />
    <SectionContainer class="pt-10 font-sans">
      <div class="flex flex-col md:flex-row mx-4">
        <div class="md:w-3/3">
          <h1 class="font-bold text-4xl">CONTACTO</h1>

          <p class="mt-8 text-pretty text-2xl">
            Somos especialistas en la fabricación, venta y distribución de
            pallets. Nuestros productos son de alta calidad y durabilidad.
          </p>

          <p class="mt-8 text-pretty">
            Si tienes alguna consulta o quieres saber más sobre nuestros
            productos, no dudes en contactarnos a través del siguiente
            formulario.
          </p>

          <!-- Formulario de Contacto -->
          <form
            action="https://formspree.io/f/{your-endpoint}"
            method="POST"
            class="mt-8"
          >
            <!-- Campo Nombre -->
            <div class="mb-4">
              <label for="name" class="block text-lg font-medium text-gray-700"
                >Nombre</label
              >
              <input
                type="text"
                id="name"
                name="name"
                required
                class="mt-1 block w-full px-4 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                placeholder="Tu nombre"
              />
            </div>

            <!-- Campo Correo Electrónico -->
            <div class="mb-4">
              <label for="email" class="block text-lg font-medium text-gray-700"
                >Correo Electrónico</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="mt-1 block w-full px-4 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                placeholder="Tu correo electrónico"
              />
            </div>

            <!-- Campo Empresa -->
            <div class="mb-4">
              <label
                for="company"
                class="block text-lg font-medium text-gray-700"
                >Empresa (opcional)</label
              >
              <input
                type="text"
                id="company"
                name="company"
                class="mt-1 block w-full px-4 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                placeholder="Tu empresa"
              />
            </div>

            <!-- Campo Mensaje -->
            <div class="mb-4">
              <label
                for="message"
                class="block text-lg font-medium text-gray-700">Mensaje</label
              >
              <textarea
                id="message"
                name="message"
                required
                rows="4"
                class="mt-1 block w-full px-4 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                placeholder="Escribe tu mensaje aquí..."></textarea>
            </div>

            <!-- Botón de Envío -->
            <div class="mb-4">
              <button
                type="submit"
                class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-lg font-medium rounded-md text-white bg-[#0F3D3E] hover:bg-teal-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              >
                Enviar
              </button>
            </div>
          </form>
        </div>
      </div>
    </SectionContainer>

    <Footer />
  </main>
</Layout>
